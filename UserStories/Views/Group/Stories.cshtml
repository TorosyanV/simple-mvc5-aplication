@model IEnumerable<UserStories.Core.Models.StoryDetailModel>

@{
    ViewBag.Title = "Stories";
}

<h2>@ViewBag.Title</h2>


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PostedOn)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PostedOn)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", "Story", new { id = item.Id }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>
