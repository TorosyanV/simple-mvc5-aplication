@model IEnumerable<UserStories.Core.Models.GroupViewModel>

@{
    ViewBag.Title = "Groups";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "Group")" class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Create
    </a>
</p>
<table class="table table-striped table-hover">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.Id)
                <a href="@Url.Action("Details", "Group", new { id = item.Id })" class="btn btn-primary">
                    @item.Name
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>

                @{
        string membClass = item.MemborsCount == 0 ? " btn btn-danger disabled" : "btn btn-success";
        string storyClass = item.StoriesCount == 0 ? " btn btn-danger disabled" : "btn btn-success";
                }
                <a href="@Url.Action("Members", "Group", new { id = item.Id })" class="@membClass">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    @item.MemborsCount
                </a>
            </td>
            <td>
               
                <a href="@Url.Action("Stories", "Group", new { id = item.Id })" class="@storyClass">
                    <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                    @item.StoriesCount
                </a>
            </td>
            <td>



        </tr>
    }

</table>
